<Window x:Class="DnsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid>
        <Button Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="209,153,0,0" Click="StartButtonClick" VerticalAlignment="Top" Width="75"/>
        <Label Content="IP or Host name" HorizontalAlignment="Left" Margin="44,21,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="hostNameTextBlock" HorizontalAlignment="Left" Margin="36,120,0,0" TextWrapping="Wrap" Height="33" VerticalAlignment="Top" Width="120"/>
        <ListBox Name="ipListBox" Height="100" Margin="36,153,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <TextBox Name="addressTextBox" HorizontalAlignment="Left" Height="22" Margin="36,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="closeButton" Content="Close" HorizontalAlignment="Left" Margin="209,189,0,0" Click="CloseButtonClick" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
